{
  "name": "yammy",
  "version": "1.1.0",
  "description": "Yet another mongo migration tool",
  "bin": {
    "yammy": "bin/run"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "test": "npm audit || true && npm run lint && npm run unit",
    "unit": "jest",
    "postunit": "codecov || true",
    "prebuild": "rm -rf dist",
    "build": "npm run build:node",
    "build:node": "tsc",
    "prerelease": "npm run typedoc && git add -A ./docs",
    "release": "git add -A && standard-version -a",
    "typedoc": "rm -rf ./docs/* && typedoc --excludeExternals --name \"$npm_package_name\" --readme none --mode file --includeDeclarations --excludePrivate --theme markdown --out ./docs"
  },
  "keywords": [
    "mongo",
    "mongodb",
    "migrate",
    "migration"
  ],
  "author": "m03geek",
  "license": "MIT",
  "files": [
    "bin/*",
    "example/*",
    "dist/**/*.js",
    "dist/**/*.ts",
    "dist/**/*.map"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm test",
      "postbump": "echo Version: v$npm_package_version",
      "posttag": "git push --follow-tags"
    }
  },
  "oclif": {
    "commands": "./dist/commands",
    "bin": "yammy",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.2.0",
    "@oclif/dev-cli": "^1.22.2",
    "@types/jest": "^25.0.0",
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@typescript-eslint/typescript-estree": "^2.18.0",
    "codecov": "^3.6.4",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-sort-requires": "^2.1.0",
    "husky": "^4.0.10",
    "jest": "^25.0.0",
    "mongodb-memory-server": "^6.2.4",
    "prettier": "^1.19.1",
    "prettier-plugin-packagejson": "^2.0.10",
    "pretty-quick": "^2.0.1",
    "standard-version": "^7.0.1",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.5.4",
    "typedoc": "^0.16.9",
    "typedoc-plugin-markdown": "^2.2.14",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "@oclif/command": "^1.5.19",
    "@oclif/config": "^1.13.3",
    "@oclif/plugin-autocomplete": "^0.1.5",
    "@oclif/plugin-help": "^2.2.3",
    "@types/mongodb": "^3.3.15",
    "cli-ux": "^5.4.4",
    "mongodb": "^3.5.2"
  }
}
