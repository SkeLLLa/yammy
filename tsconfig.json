{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "newLine": "LF",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "es2018"],
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2019"
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*", "coverage/**/*", "node_modules/**/*", "typings/**/*.d.ts"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    "name": "Node object hash",
    "excludeExternals": true,
    "includeVersion": true,
    "hideGenerator": true,
    "excludePrivate": true,
    "readme": "none"
  }
}
